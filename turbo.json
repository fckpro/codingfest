{
  "globalEnv": ["PG_URL", "PG_CERT", "REDIS_HOST", "NODE_PORT", "NODE_ENV"],
  "tasks": {
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["codegen"],
      "cache": false
    },
    "build": {
      "dependsOn": ["codegen"],
      "outputs": ["dist/**"]
    },
    "codegen": {},
    "web#codegen": {
      "dependsOn": ["core#codegen"],
      "inputs": ["src/codegen/**"]
    },
    "core#codegen": {
      "inputs": ["src/**"]
    },
    "lint": {
      "inputs": ["src/**", "eslint.config.js"]
    },
    "tscheck": {
      "inputs": ["src/**", "tsconfig.json"]
    },
    "clean": {
      "cache": false
    }
  }
}